<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimension_140"
        android:src="@drawable/thor_love_and_thunder"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/dimension_36"
        android:contentDescription="@string/description_movie_thor"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/movie_title"
        android:textSize="@dimen/dimension_font_36"
        android:layout_marginTop="@dimen/dimension_font_16"
        android:layout_gravity="center"/>

</LinearLayout>